  <CodeSnippet Format="1.0.0">
    <Header>
      <Title>getoraddcomponent</Title>
      <Shortcut>getoraddcomponent</Shortcut>
      <Description>GetComponent ?? AddComponent</Description>
      <Author>to-osaki</Author>
      <SnippetTypes>
        <SnippetType>Expansion</SnippetType>
      </SnippetTypes>
    </Header>
    <Snippet>
      <Declarations>
        <Literal>
          <ID>go</ID>
          <Default>go</Default>
        </Literal>
        <Literal>
          <ID>type</ID>
          <Default>Transform</Default>
        </Literal>
      </Declarations>
      <Code Language="csharp"><![CDATA[$go$.GetComponent<$type$>() ?? $go$.AddComponent<$type$>();$end$]]>
      </Code>
    </Snippet>
  </CodeSnippet>

