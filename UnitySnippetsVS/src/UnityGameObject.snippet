  <CodeSnippet Format="1.0.0">
    <Header>
      <Title>destroy</Title>
      <Shortcut>destroy</Shortcut>
      <Description>Destroy();</Description>
      <Author>to-osaki</Author>
      <SnippetTypes>
        <SnippetType>Expansion</SnippetType>
      </SnippetTypes>
    </Header>
    <Snippet>
      <Declarations>
        <Literal>
          <ID>go</ID>
          <Default>go</Default>
        </Literal>
      </Declarations>
      <Code Language="csharp"><![CDATA[if($go$ != null)
{
  if (Application.isPlaying)
  {
    Destroy($go$);
  }
  else
  {
    DestroyImmediate($go$);
  }
}$end$]]>
      </Code>
    </Snippet>
  </CodeSnippet>
